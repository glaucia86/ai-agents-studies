{
  "compilerOptions": {
    "target": "es2022",                  
    "module": "nodenext", 
    "moduleResolution": "nodenext",               
    "esModuleInterop": true,             
    "forceConsistentCasingInFileNames": true,
    "strict": true,                      
    "skipLibCheck": true,  
    "rootDir": "./src",              
    "outDir": "./dist",                    
    "resolveJsonModule": true            
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
